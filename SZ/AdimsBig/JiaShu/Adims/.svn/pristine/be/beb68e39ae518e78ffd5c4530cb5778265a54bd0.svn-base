        /// <summary>
        /// 获取月份第一天的日期
        /// </summary>
        /// <param name="datetime">月份第一天的时间</param>
        /// <returns></returns>
        public DateTime FirstDayOfMonth(DateTime datetime)
        {
            return datetime.AddDays(1 - datetime.Day);
        }



