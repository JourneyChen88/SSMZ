                && !ValidationRegex.ValidteDouble(txtBPlatelet.Controls[0].Text))
            {
                MessageBox.Show("血小板填写有误，请检查！");
                txtBPlatelet.Focus();
                return false;
            }
            if (!ValidationRegex.ValidteData(txtCryoprecipitate.Controls[0].Text)
