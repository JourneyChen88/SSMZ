            }
            if (!ValidationRegex.ValidteData(txtBloodValue.Controls[0].Text)
                && !ValidationRegex.ValidteDouble(txtBloodValue.Controls[0].Text))
            {
                MessageBox.Show("其他值填写有误，请检查！");
                txtBloodValue.Focus();
